{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++20",
                "-mmacosx-version-min=13.0",
                "-Wall",
                "-framework",
                "OpenGL",
                "-framework",
                "GLUT",
                "-framework",
                "Carbon",
                "-L/opt/homebrew/Cellar/libpng/1.6.39/lib/",
                "-v",
                "-DUSE_OPENAL",
                "-lpng" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}